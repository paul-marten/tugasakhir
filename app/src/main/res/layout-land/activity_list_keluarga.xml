<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/papantulis">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/imgKelDad"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="26dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/imgKelNenek"
                    android:layout_alignTop="@+id/imgKelKakek"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/imgKelMom"
                    android:layout_alignTop="@+id/imgKelDad"
                    android:layout_toEndOf="@+id/imgKelDad"
                    android:layout_marginStart="48dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/imgKelKakek"
                    android:layout_marginEnd="40dp"
                    android:layout_alignTop="@+id/imgKelMom"
                    android:layout_toStartOf="@+id/imgKelNenek" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/question2"
                    android:id="@+id/imgKuisAnggota"
                    android:layout_marginStart="27dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/question2"
                    android:id="@+id/imgSuaraAnggota"
                    android:layout_marginEnd="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="Kuis Gambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtKuisAng"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgKuisAnggota"
                    android:layout_marginStart="14dp" />

                <TextView
                    android:text="Kuis Suara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSuaraAng"
                    android:layout_marginEnd="48dp"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imgSuaraAnggota" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>